<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ui.PhotoDetail.DetailFragment">

    <data class="DetailFragmentBinding" />

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/lbl_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/eight"
        android:drawablePadding="@dimen/eight"
        android:drawableStart="@drawable/ic_color_black"
        android:text="Color:"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_color"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/eight"
        android:layout_marginTop="@dimen/eight"
        android:text="#FFFFF"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@id/lbl_color" />

    <TextView
        android:id="@+id/lbl_likes"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/eight"
        android:drawablePadding="@dimen/eight"
        android:drawableStart="@drawable/ic_like_black"
        android:text="Likes:"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lbl_color" />

    <TextView
        android:id="@+id/txt_likes"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/eight"
        android:layout_marginTop="@dimen/eight"
        android:text="3"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@id/lbl_likes"
        app:layout_constraintTop_toBottomOf="@id/txt_color" />

    <TextView
        android:id="@+id/lbl_downloads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/eight"
        android:drawablePadding="@dimen/eight"
        android:drawableStart="@drawable/ic_download_black"
        android:text="Downloads:"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lbl_likes" />

    <TextView
        android:id="@+id/txt_downloads"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/eight"
        android:layout_marginTop="@dimen/eight"
        android:text="3"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@id/lbl_downloads"
        app:layout_constraintTop_toBottomOf="@id/txt_likes" />

    <TextView
        android:id="@+id/lbl_make"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/eight"
        android:drawablePadding="@dimen/eight"
        android:drawableStart="@drawable/ic_photo_camera_black"
        android:text="Make:"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lbl_downloads" />

    <TextView
        android:id="@+id/txt_make"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/eight"
        android:layout_marginTop="@dimen/eight"
        android:text="Canon"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@id/lbl_make"
        app:layout_constraintTop_toBottomOf="@id/txt_downloads" />

    <TextView
        android:id="@+id/lbl_model"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/eight"
        android:drawablePadding="@dimen/eight"
        android:drawableStart="@drawable/ic_new"
        android:text="Model:"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lbl_make" />

    <TextView
        android:id="@+id/txt_model"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/eight"
        android:layout_marginTop="@dimen/eight"
        android:text="3"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@id/lbl_model"
        app:layout_constraintTop_toBottomOf="@id/txt_make" />

    <TextView
        android:id="@+id/lbl_exposure"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/eight"
        android:drawablePadding="@dimen/eight"
        android:drawableStart="@drawable/ic_exposure_black"
        android:text="Exposure:"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lbl_model" />

    <TextView
        android:id="@+id/txt_exposure"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/eight"
        android:layout_marginTop="@dimen/eight"
        android:text="3.05"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@id/lbl_exposure"
        app:layout_constraintTop_toBottomOf="@id/txt_model" />

    <TextView
        android:id="@+id/lbl_aperture"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/eight"
        android:drawablePadding="@dimen/eight"
        android:drawableStart="@drawable/ic_aperture_black"
        android:text="Aperture:"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lbl_exposure" />

    <TextView
        android:id="@+id/txt_aperture"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/eight"
        android:layout_marginTop="@dimen/eight"
        android:text="3"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@id/lbl_aperture"
        app:layout_constraintTop_toBottomOf="@id/txt_exposure" />

    <TextView
        android:id="@+id/lbl_focal"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/eight"
        android:drawablePadding="@dimen/eight"
        android:drawableStart="@drawable/ic_aperture_black"
        android:text="Focal Lenght:"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lbl_aperture" />
    <TextView
        android:id="@+id/txt_focal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/eight"
        android:layout_marginTop="@dimen/eight"
        android:text="3"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@id/lbl_focal"
        app:layout_constraintTop_toBottomOf="@id/txt_aperture" />
    <TextView
        android:id="@+id/lbl_iso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/eight"
        android:drawablePadding="@dimen/eight"
        android:drawableStart="@drawable/ic_iso_black"
        android:text="ISO:"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lbl_focal" />
    <TextView
        android:id="@+id/txt_iso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/eight"
        android:layout_marginTop="@dimen/eight"
        android:text="3"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@id/lbl_iso"
        app:layout_constraintTop_toBottomOf="@id/txt_focal" />
</android.support.constraint.ConstraintLayout>
</layout>